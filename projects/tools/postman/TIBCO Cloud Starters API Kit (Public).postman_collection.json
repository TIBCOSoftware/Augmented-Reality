								"exec": [
									"// gets AppID for the App defined in Postman Collection Variables: ",
									"// - shareApplicationName ",
									"",
									"var jsonData = JSON.parse(responseBody);",
									"",
									"jsonData.forEach(function(app){",
									"    console.log(\"App.id \" + app.id);",
									"    console.log(\"App.Name \" + app.name);",
									"    console.log(\"appName \" + pm.variables.get(\"shareApplicationName\"));",
									"    if (app.name == pm.variables.get(\"shareApplicationName\")) {",
									"        pm.environment.set(\"sharedAppID\", app.latestVersionId);",
									"        console.log(\"App ID for \" + pm.variables.get(\"shareApplicationName\") + \" to share is \" + pm.environment.get(\"sharedAppID\"));",
									"    }",
